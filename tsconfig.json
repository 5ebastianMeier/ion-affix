{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "inlineSources": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true
    }
}
